<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrarPokemon">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:fontFamily="sans-serif-black"
        android:text="Agregar Pokemon"
        android:textAlignment="center"
        android:textSize="25sp" />

    <View
        android:layout_width="360dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/black" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:hint="Numero del pokemon" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:hint="Nombre del pokemon" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginVertical="40dp" />

    <Button
        android:id="@+id/btnSubirImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue_cool"
        android:fontFamily="sans-serif-black"
        android:text="Seleccionar imÃ¡gen" />

    <Button
        android:id="@+id/btnSavePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/red_wine"
        android:fontFamily="sans-serif-black"
        android:text="Registrar pokemon" />


</LinearLayout>